<div class="card mb-3">
  <h2 class="card-header h4">
    User Login #<%= user_login.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Username</dt>
      <dd><%= user_login.username %></dd>

      <dt>User type</dt>
      <dd><%= user_login.user_type %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back user_login, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_user_login_url(user_login), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to user_login, method: :delete, data: { confirm: "Do you really want to delete this user_login?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(user_login.updated_at) %> ago
  </div>
</div>
